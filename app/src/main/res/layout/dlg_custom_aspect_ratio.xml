<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingTop="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin">

    <com.roy.commons.views.MyTextView
        android:id="@+id/aspectRatioWidthLabel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/width" />

    <com.roy.commons.views.MyEditText
        android:id="@+id/aspectRatioWidth"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aspectRatioWidthLabel"
        android:layout_marginBottom="@dimen/activity_margin"
        android:inputType="number"
        android:maxLength="6"
        android:maxLines="1"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/normal_text_size" />

    <com.roy.commons.views.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/aspectRatioWidth"
        android:layout_alignBottom="@+id/aspectRatioWidth"
        android:layout_toStartOf="@+id/aspectRatioHeight"
        android:layout_toEndOf="@+id/aspectRatioWidth"
        android:gravity="center"
        android:text=":"
        android:textStyle="bold" />

    <com.roy.commons.views.MyTextView
        android:id="@+id/aspectRatioHeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@+id/aspectRatioWidthLabel"
        android:text="@string/height" />

    <com.roy.commons.views.MyEditText
        android:id="@+id/aspectRatioHeight"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aspectRatioWidthLabel"
        android:layout_alignStart="@+id/aspectRatioHeightLabel"
        android:inputType="number"
        android:maxLength="6"
        android:maxLines="1"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/normal_text_size" />

</RelativeLayout>
