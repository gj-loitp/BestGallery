<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/writePermissionsDialogHolder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin">

    <com.eagle.commons.views.MyTextView
        android:id="@+id/writePermissionsDialogText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin"
        android:text="@string/confirm_storage_access_text" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/writePermissionsDialogImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.eagle.commons.views.MyTextView
        android:id="@+id/writePermissionsDialogTextSd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin"
        android:layout_marginBottom="@dimen/activity_margin"
        android:text="@string/confirm_storage_access_text_sd" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/writePermissionsDialogImageSd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.appcompat.widget.LinearLayoutCompat>
